<Window x:Class="PROG7321_Task_1.SortBooksS"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROG7321_Task_1"
        mc:Ignorable="d"
        Title="SortBooksS" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="listBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="28,40,437,110" Drop="ListBox_Drop" AllowDrop="True" Loaded="loadData" PreviewMouseDown="ListBox_PreviewMouseLeftButtonDown" Background="#FF889EA6"/>
        <ListBox x:Name="listBoxResult" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="400,40,27,110"  Drop="ListBox_Drop" AllowDrop="True" PreviewMouseDown="ListBox_PreviewMouseLeftButtonDown" Background="#FFB77878"/>
        <Button x:Name="buttonCommit" Content="Continue" HorizontalAlignment="Left" Margin="681,376,0,0" VerticalAlignment="Top" Height="33" Width="68" Click="buttonCommit_click"/>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Left" Height="17" Margin="139,392,0,0" VerticalAlignment="Top" Width="224" Value="0"/>
        <Button x:Name="backButton" Content="Back" HorizontalAlignment="Left" Margin="28,10,0,0" VerticalAlignment="Top" Click="backButton_click"/>

    </Grid>
</Window>
